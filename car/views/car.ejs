    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var myCarousel = document.getElementById('carouselExampleCaptions');
            var carousel = new bootstrap.Carousel(myCarousel, {
                interval: 2000, // Change the interval if needed
                // Add any other options you need
            });
        });

        // Function to move to the next slide when clicking the next arrow
        function nextSlide() {
            var myCarousel = document.getElementById('carouselExampleCaptions');
            var carousel = bootstrap.Carousel.getInstance(myCarousel);
            carousel.next();
        }

        // Function to move to the previous slide when clicking the previous arrow
        function prevSlide() {
            var myCarousel = document.getElementById('carouselExampleCaptions');
            var carousel = bootstrap.Carousel.getInstance(myCarousel);
            carousel.prev();
        }

        let isSell = true;

        function toggleButton() {
            const button = document.getElementById('sellBtn');
            const plusButtonContainer = document.getElementById('plus-button-container');
            const sellForm = document.getElementById('sellForm');

            if (isSell) {
                button.classList.remove('btn-outline-danger');
                button.classList.add('btn-success');
                button.textContent = 'Buy';
                // Submit the form to redirect to /listing
                sellForm.submit();
            } else {
                button.classList.remove('btn-success');
                button.classList.add('btn-outline-danger');
                button.textContent = 'Sell';
                plusButtonContainer.style.display = 'none'; // Hide the plus button container
            }
            isSell = !isSell;
        }

        document.getElementById('about-link').addEventListener('click', function(event) {
            event.preventDefault();
            document.getElementById('popup').style.display = 'block';
        });

        function closePopup() {
            document.getElementById('popup').style.display = 'none';
        }
    </script>

</html>
